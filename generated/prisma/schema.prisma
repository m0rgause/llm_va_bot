generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model kelas {
  id            String     @id
  semester_id   String
  mata_kuliah   String     @db.VarChar(255)
  hari          kelas_hari
  waktu_mulai   DateTime   @db.Time(0)
  waktu_selesai DateTime   @db.Time(0)
  ruang         String     @db.VarChar(255)
  dosen         String     @db.VarChar(255)
  kelas         String     @db.VarChar(255)
  kode          String     @db.VarChar(255)
  semester      semester   @relation(fields: [semester_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FKkelas_semester_relation")

  @@index([semester_id], map: "FKkelas244020")
}

model semester {
  id      String  @id
  user_id String
  nama    Int
  kelas   kelas[]
  user    user    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FKsemester_user_relation")

  @@index([user_id], map: "FKsemester148770")
}

model user {
  id          String     @id
  nama        String     @db.VarChar(255)
  email       String     @unique @db.VarChar(255)
  password    String     @db.VarChar(255)
  no_whatsapp String?    @unique @db.Char(15)
  role        user_role
  is_notify   Boolean    @default(false)
  is_saved    Boolean    @default(false)
  document    document[]
  semester    semester[]
}

model document {
  id         String   @id
  user_id    String
  nama       String   @db.VarChar(255)
  category   String   @db.VarChar(255)
  file_name  String   @db.VarChar(255)
  file_type  String   @db.VarChar(255)
  file_size  Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @db.Timestamp(6)
  user       user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FKdocument_user_relation_user")

  @@index([user_id], map: "FKdocument_user_relation")
}

enum kelas_hari {
  senin
  selasa
  rabu
  kamis
  jumat
  sabtu
  minggu
}

enum user_role {
  administrator
  user
}
